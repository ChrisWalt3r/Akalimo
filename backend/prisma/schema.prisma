generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Roles
enum Role {
  SERVICE_RECEIVER
  SERVICE_PROVIDER
  ADMIN
  MEMBER
  BUSINESS
  DISTRIBUTOR
  INSTITUTION
}

model User {
  id        String   @id @default(uuid())
  email     String?  @unique
  phone     String   @unique
  password  String
  role      Role     @default(SERVICE_RECEIVER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Service Provider specific
  accessCode String?

  profile   Profile?
  wallet    Wallet?
  orders    Order[]        @relation("UserOrders") // As receiver
  jobs      Order[]        @relation("ProviderJobs") // As provider
  notifications Notification[]
  quotations    Quotation[]
  
  ratingsGiven    Rating[] @relation("Rater")
  ratingsReceived Rating[] @relation("Rated")
}

model Profile {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  fullName  String
  idNumber  String? // National ID
  location  String?
  latitude  Float?
  longitude Float?
  avatarUrl String?
  
  services  Service[]
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  services    Service[]
  orders      Order[]
}

model Service {
  id          String   @id @default(uuid())
  name        String
  description String?
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  profileId   String?
  profile     Profile? @relation(fields: [profileId], references: [id])
  price       Decimal?
}

model Order {
  id                String   @id @default(uuid())
  serviceReceiverId String
  serviceReceiver   User     @relation("UserOrders", fields: [serviceReceiverId], references: [id])
  serviceProviderId String?
  serviceProvider   User?    @relation("ProviderJobs", fields: [serviceProviderId], references: [id])
  
  status            String   @default("PENDING") // PENDING, ACCEPTED, IN_PROGRESS, COMPLETED, CANCELLED
  description       String?
  scheduledDate     DateTime?
  totalAmount       Decimal?

  // Location Details
  locationName      String?
  latitude          Float?
  longitude         Float?

  // Order Details
  photos            String[]
  quotations        Int      @default(1)
  serviceType       String?  // E.g. "Sofa", "Room"
  
  categoryId        String?
  category          Category? @relation(fields: [categoryId], references: [id])
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  
  quotationsList    Quotation[] 
  updates           ProgressUpdate[]
  rating            Rating?
}

model Wallet {
  id      String  @id @default(uuid())
  userId  String  @unique
  user    User    @relation(fields: [userId], references: [id])
  balance Decimal @default(0.00)
  pin     String? // Encrypted PIN
  transactions Transaction[]
}

model Transaction {
  id        String   @id @default(uuid())
  walletId  String
  wallet    Wallet   @relation(fields: [walletId], references: [id])
  amount    Decimal
  type      String   // DEPOSIT, WITHDRAWAL, PAYMENT_OUT, PAYMENT_IN, REFUND
  status    String   @default("COMPLETED")
  description String?
  relatedOrderId String?
  
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  isRead    Boolean  @default(false)
  type      String   @default("INFO") // INFO, ORDER_ALERT, QUOTATION_RECEIVED
  metadata  Json?    // Store orderId etc here
  
  createdAt DateTime @default(now())
}

model Quotation {
  id              String   @id @default(uuid())
  orderId         String
  order           Order    @relation(fields: [orderId], references: [id])
  serviceProviderId String
  serviceProvider User     @relation(fields: [serviceProviderId], references: [id])
  
  // Amounts
  assessmentFee   Decimal  @default(0)
  serviceFee      Decimal
  totalAmount     Decimal
  
  // Details
  items           Json? // Array of items { name, qty, price }
  status          String @default("PENDING") // PENDING, ACCEPTED, REJECTED
  
  createdAt       DateTime @default(now())
}

model ProgressUpdate {
  id          String   @id @default(uuid())
  orderId     String
  order       Order    @relation(fields: [orderId], references: [id])
  
  description String?
  photos      String[] // URLs of progress photos
  
  createdAt   DateTime @default(now())
}

model Rating {
  id          String   @id @default(uuid())
  orderId     String   @unique
  order       Order    @relation(fields: [orderId], references: [id])
  
  raterId     String
  rater       User     @relation("Rater", fields: [raterId], references: [id])
  
  ratedUserId String
  ratedUser   User     @relation("Rated", fields: [ratedUserId], references: [id])
  
  rating      Int      // 1-5
  comment     String?
  
  createdAt   DateTime @default(now())
}
